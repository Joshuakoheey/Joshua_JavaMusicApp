<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/logo1_welcome"
        android:layout_width="138dp"
        android:layout_height="144dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whitelogo" />

    <ImageButton
        android:id="@+id/signup_b_welcome"
        android:layout_width="389dp"
        android:layout_height="74dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="33dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/b_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv2_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signup_b_welcome"
        app:layout_constraintEnd_toEndOf="@+id/signup_b_welcome"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/signup_b_welcome"
        app:layout_constraintTop_toTopOf="@+id/signup_b_welcome"
        app:layout_constraintVertical_bias="0.454" />

    <ImageButton
        android:id="@+id/login_b_welcome"
        android:layout_width="381dp"
        android:layout_height="66dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:cropToPadding="true"
        android:foreground="@drawable/b_1"
        app:layout_constraintBottom_toTopOf="@+id/signup_b_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv1_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:text="Login"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signup_b_welcome"
        app:layout_constraintEnd_toEndOf="@+id/login_b_welcome"
        app:layout_constraintStart_toStartOf="@+id/login_b_welcome"
        app:layout_constraintTop_toTopOf="@+id/login_b_welcome" />

</androidx.constraintlayout.widget.ConstraintLayout>