<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.p14_musicstream">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.P14_MusicStream">
        <activity android:name=".ChangeEmailActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".DeleteAccountActivity" />
        <activity android:name=".HomeScreenActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".SignoutActivity" />
        <activity android:name=".ChangeUsernameActivity" />
        <activity android:name=".RequestsActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".RadioPlayer1Activity" />
        <activity android:name=".RadioPlayer2Activity" />
        <activity android:name=".RadioPlayer3Activity" />
        <activity android:name=".RadioPlayer4Activity" />
        <activity android:name=".SearchSongActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".MusicPlayerActivity" />
        <activity android:name=".LibraryFavouritesActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".LibraryCollectionsActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".LibraryDownloadsActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>